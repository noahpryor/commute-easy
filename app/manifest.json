{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://maps.googleapis.com/**/*"
  ],
  "web_accessible_resources": [
    "scripts/craigslistMapOverlay.js",
    "scripts/streeteasyMapOverlay.js"
  ],
  "content_scripts": [{
      "matches": [
        "https://streeteasy.com/for-rent/**/*",
        "https://streeteasy.com/**/*"
      ],
      "js": [
        "scripts/streeteasySearch.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }, {
      "matches": [
        "https://*.craigslist.org/*"
      ],
      "exclude_matches": ["https://*.craigslist.org/search/*"],

      "js": [
        "scripts/craigslistListing.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }, {
      "matches": [
        "https://*.craigslist.org/search/*"
      ],
      "js": [
        "scripts/craigslistSearch.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }

  ]
}
