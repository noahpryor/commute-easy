{
  "name": "CommuteEasy",
  "version": "0.1.0",
  "description": "Show commute times on StreetEasy listings",
  "license": "MIT",
  "scripts": {
    "dev": "webextension-toolbox dev",
    "build": "webextension-toolbox build",
    "build-prod": "NODE_ENV=production webextension-toolbox build chrome",
    "test": "jest --coverage",
    "tdd": "jest --watch",
    "preversion": "npm test",
    "version": "npm run build-prod",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^58.0.2",
    "dotenv": "^5.0.1",
    "ts-loader": "^4.2.0",
    "typescript": "^2.8.3",
    "webextension-toolbox": "latest"
  },
  "dependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "leaflet": "^1.3.1",
    "places.js": "^1.6.0",
    "ts-jest": "^22.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
